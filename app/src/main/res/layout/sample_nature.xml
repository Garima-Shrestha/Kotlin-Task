<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/night_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="155dp"
        android:text="Night Scenerio"
        app:layout_constraintStart_toEndOf="@+id/abc"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc" />

    <TextView
        android:id="@+id/night_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="This is night scenerio"
        app:layout_constraintStart_toEndOf="@+id/abc"
        app:layout_constraintTop_toBottomOf="@+id/night_title" />

</androidx.constraintlayout.widget.ConstraintLayout>